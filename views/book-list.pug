doctype html
html
  head
    title Book List
  body
    h1 All Books

    a(href="/books/new", style="display: inline-block; margin-bottom: 1em; padding: 0.5em 1em; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 4px;") Add New Book

    ul
      each book in books
        li
          a(href=`/books/${book.isbn}`)= `${book.title} by ${book.author}`
          form(action=`/books/${book.isbn}/delete`, method="POST", style="display:inline")
            button(type="submit", style="margin-left:1em; background-color: red; color: white; border: none; padding: 0.3em 0.6em; border-radius: 3px;") Delete
            a(href=`/books/${book.isbn}/edit`, style="margin-left: 1em;") Edit