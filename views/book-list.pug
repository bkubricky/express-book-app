doctype html
html
  head
  style.
      .shadow-neumorph {
        box-shadow: 8px 8px 16px #c5c5c5, -8px -8px 16px #ffffff;
      }

      .shadow-neumorph-inset {
        box-shadow: inset 6px 6px 12px #c5c5c5, inset -6px -6px 12px #ffffff;
      }
  title Book List
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(class="bg-gray-200 min-h-screen p-8 text-gray-800 font-sans")
    main(class="w-[90vw] max-w-screen-lg mx-auto p-8")
      
      h1(class="text-3xl font-bold mb-6 text-center") All Books

      a(
        href="/books/new"
        class="inline-block mb-6 px-4 py-2 rounded-xl bg-gray-200 text-gray-700 shadow-neumorph hover:shadow-neumorph-inset transition"
      ) Add New Book

      ul(class="space-y-4")
        each book in books
          li(class="bg-gray-200 rounded-xl p-4 shadow-neumorph flex justify-between items-center")
            span(class="text-lg font-medium")
              a(href=`/books/${book.isbn}` class="hover:underline")= `${book.title} by ${book.author}`

            div(class="flex items-center space-x-4")
              a(
                href=`/books/${book.isbn}/edit`
                class="px-3 py-1 rounded-xl bg-gray-200 text-blue-600 shadow-neumorph hover:shadow-neumorph-inset transition"
              ) Edit

              form(action=`/books/${book.isbn}/delete`, method="POST")
                button(
                  type="submit"
                  class="px-3 py-1 rounded-xl bg-red-500 text-white shadow-md hover:bg-red-600 transition"
                ) Delete
